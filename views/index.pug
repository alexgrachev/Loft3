extends layout

block content

    if (msgslogin)
        .status= msglogin


    section.music
        .container.music__container
            .music__left
                img(src="images/Music.jpg", alt='Music')
            .music__right.about
                .about__subtitle.subtitle Обо мне
                h2.about__title.title Я музыкант
                .about__slogan У музыки нет возраста и нации
                .about__descriptons Когда мне было 11 лет, я увидел на «MTV», как Курт Кобейн поёт «Heart-Shaped Box», и замер в изумлении. Тогда он мне показался самым красивым человеком в мире. Даже в столь юном возрасте, я почувствовал его грусть.
                .about__note
                    <span class="about__note-family">Архипов</span> <span class="about__note-field"> -  Победитель гремми 2017</span>

    section.life
        .container.life__container
            h2.life__title Несколько чисел моей жизни
        .life__slogan  У музыки нет возраста и нации, <br/> однажды мы уйдём, а она останется.
        ul.life__skills
            li.life__skill
                .life__skill-number #{skills[0].number}
                .life__skill-text Возраст начала занятий на скрипке
            li.life__skill
                .life__skill-number #{skills[1].number}
                .life__skill-text Концертов отыграл
            li.life__skill
                .life__skill-number #{skills[2].number}
                .life__skill-text Максимальное число городов в туре
            li.life__skill
                .life__skill-number #{skills[3].number}
                .life__skill-text Лет на сцене в качестве скрипача
        a(class="life__link"  href="http://") Читать историю


    section.product
        .container
            .product__subtitle.subtitle Товары от студии Архипова
            h2.product__title.title Мой личный бренд
            ul.product__list

                each item in products
                    - img = item.src
                    li.product__item
                        img.product__img(src=item.src, alt=item.name)
                        .product__hover
                            .product__description
                                .product__name #{item.name}
                                .product__price $ #{item.price}



    section.form
        .container
            .form__subtitle.subtitle Контактные данные
            h2.form__title.title Пишите, пообщаемся

            form(class="form-email" action="/" method="POST")
                .form-email__line
                    label.form-email__label(for="") Имя *
                    input.form-email__input(type="text" name="name" value='Loftschool 3')

                .form-email__line
                    label.form-email__label(for="") Email *
                    input.form-email__input(type="email" name="email" value='alexvirus@mail.ru')

                .form-email__line
                    label.form-email__label(for="") Сообщение
                    textarea.form-email__textarea(name="message") Message here

                .form-email__line
                    button(type="submit").form-email__button.button Отправить
