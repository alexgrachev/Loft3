extends layout

block content

    section.admin-content
        .container.admin-content__container
            .form-container

                form(class='form-skill' action="/admin/skills" method="POST")
                    .form-title Счетчики
                        label.form-skill__input-line <span .form-skill__input-title">Возраст</span>
                            input(name="age" type="number" value=`${skills[0].number}`).form-skill__input
                        label.form-skill__input-line <span .form-skill__input-title">Концертов</span>
                            input(name="concerts" type="number" value=skills[1].number).form-skill__input
                        label.form-skill__input-line <span .form-skill__input-title">Число городов</span>
                            input(name="cities" type="number" value=skills[2].number).form-skill__input
                        label.form-skill__input-line <span .form-skill__input-title">Лет на сцене</span>
                            input(name="years" type="number" value=skills[3].number).form-skill__input
                    .form__btns.form-skill__input-line
                        button(type="submit").button Сохранить
                    if(msgskill)
                        .status= msgskill



                form(class='form-upload' action="/admin/upload" method="POST" enctype="multipart/form-data")

                    .form-title Добавить товар
                    .form-upload__input-line
                        .form-upload__wraper
                            label.form-upload__label
                                <span .form-upload__input-file-title">Загрузить фото</span>
                                input(name="photo" type="file" required accept="image/*").form-upload__input-file
                        .form-upload__input-line
                            input(name="name" type="text" placeholder="Название" value='').form-upload__input
                        .form-upload__input-line
                            input(name="price" type="text" placeholder="Цена" value='').form-upload__input
                        .form-upload__input-line.form-upload__input-line--btn
                            button(type="submit").button Добавить
                        if(msg)
                            .status= msg


    section.admin-content
        .container.admin-content__container
            .form-container
                a(class="about__subtitle subtitle" href="/admin/logout") <span .form-upload__input-file-title">logout</span>